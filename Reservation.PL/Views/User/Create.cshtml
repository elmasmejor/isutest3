@using Reservation.PL.Resources
@model Reservation.Entities.User
@{
    ViewBag.Title = "Create";
}
@*@ViewBag.UserTypes.Count*@

@Styles.Render("~/Content/select")
@Styles.Render("~/Content/datedropper")

<section class="action-section">
    <div class="container">
        <div class="row action-row">
            <div class="col-lg-3 action-name">
                @Resource.create_user_action
            </div>
            <div class="col-lg-4 action-desc">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed d
            </div>
            <div class="col-lg-4">
                @Html.ActionLink(Resource.user_list_action, "List", "User", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</section>

<section class="control-section">
    <form>
        <div class="container control-container">
            <div class="row form-inline">
                <div class="col-lg-12">

                    <div class="form-group">
                        <input type="text" class="form-control" id="name" placeholder="@Resource.user_name" data-bind="value: name">
                    </div>
                    <div class="form-group">
                        @*<input type="text" class="form-control" id="type" placeholder="@Resource.user_type" data-bind="value: UserTypeId">*@
                        <select id="user_type" name="UserTypeId" class="selectpicker" style="height: 40px;" data-size="5">
                            @foreach (var ut in ViewBag.UserTypes)
                            {
                                <option value="@ut.UserTypeId">@ut.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <input type="tel" class="form-control" id="phone" placeholder="@Resource.user_phone" data-bind="value: phone">
                    </div>

                    <div class="form-group">
                        <input type="date" class="form-control" id="dob" placeholder="@Resource.user_dob" data-bind="value: dob">
                    </div>
                </div>
            </div>
        </div>

        <div class="container control-container user-description">
            <div id="summernote" data-bind="html: description">user description</div>
        </div>

        <div class="container save-container">
            <div class="row ">
                <button id="saveuser" type="button" class="text-uppercase">Save</button>
            </div>
        </div>
    </form>
</section>

@section scripts{
    @Scripts.Render("~/bundles/selectjs")
    @Scripts.Render("~/bundles/datejs")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/ko-user")
    <script type="text/javascript">
        User.SaveUrl = '@Url.Action("Save", "User")';

        $(document).ready(function () {
            $('#dob').dateDropper();
            $('#summernote').summernote();
        });
    </script>
}